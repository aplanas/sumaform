module "base" {
  source = "./modules/base"

  cc_username = ...
  cc_password = ...

  name_prefix = ... // if you use name_prefix, make sure to update the server_configuration for clients/minions below

  provider_settings = {
    availability_zone = local.availability_zone
    region            = local.region
    ssh_allowed_ips   = [...]
    key_name          = local.key_name
    key_file          = local.key_file
  }
}


